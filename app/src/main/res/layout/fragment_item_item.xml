<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_item_height"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_item_image"
                android:layout_width="@dimen/fragment_item_image"
                android:layout_height="@dimen/fragment_item_image"
                android:layout_margin="8dp"
                android:src="@mipmap/ic_launcher" />

            <View
                android:id="@+id/fragment_item_view"
                android:layout_width="1dp"
                android:layout_height="@dimen/fragment_item_image"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:background="@color/colorPrimary" />

            <include
                layout="@layout/fragment_item_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>