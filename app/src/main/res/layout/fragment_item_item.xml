<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_item_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_item_image"
            android:layout_margin="8dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/fragment_item_image"
            android:layout_height="@dimen/fragment_item_image" />

        <View
            android:id="@+id/fragment_item_view"
            android:layout_width="1dp"
            android:layout_marginStart="4dp"
            android:layout_height="@dimen/fragment_item_image"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"/>

        <include layout="@layout/fragment_item_detail"
            android:layout_margin="4dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
    </LinearLayout>

</LinearLayout>